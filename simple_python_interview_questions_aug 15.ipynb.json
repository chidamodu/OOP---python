    "# How do you get the count of each letter in a sentence\n",
    "\n",
    "def letter_count(s):\n",
    "    d={}\n",
    "    for i in list(s):\n",
    "        if i!=' ':\n",
    "            d[i]=d.get(i, 0)+1\n",
    "            \n",
    "    return d\n",
    "    \n",
    "    \n",
    "    "
   ]
